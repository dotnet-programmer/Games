<UserControl x:Class="Snake.WpfApp.Views.UserControls.NewHighScoreControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:viewmodels="clr-namespace:Snake.WpfApp.ViewModels"
			 d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
			 mc:Ignorable="d"
			 x:Name="ControlNewHighScore"
			 d:DesignHeight="600"
			 d:DesignWidth="600">

	<Grid x:Name="GridMain"
		  Background="Black">

		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<TextBlock x:Name="TxtInfo"
				   Grid.Row="0"
				   Text="New high score!"
				   Style="{StaticResource TxtTopMenuPositionsStyle}" />

		<TextBlock x:Name="TxtCurrentScore"
				   Grid.Row="1"
				   Style="{StaticResource BasicTextBlock}">
			<Run Text="Your score:" />
			<Run Text="{Binding CurrentScore, Mode=OneWay}" />
		</TextBlock>

		<StackPanel x:Name="PanelCurrentPlayerName"
					Grid.Row="2"
					Orientation="Horizontal"
					HorizontalAlignment="Center">

			<TextBlock x:Name="TxtName"
					   Grid.Row="1"
					   Text="Your name:"
					   Style="{StaticResource BasicTextBlock}" />

			<TextBox x:Name="TbCurrentPlayerName"
					 Width="200"
					 Height="60"
					 Margin="5,20,10,20"
					 Background="Black"
					 Foreground="Green"
					 BorderBrush="Green"
					 BorderThickness="2"
					 VerticalContentAlignment="Center"
					 MaxLength="15"
					 FontSize="20"
					 FontFamily="Consolas"
					 Text="{Binding CurrentPlayerName}" />
		</StackPanel>

		<Button x:Name="BtnSave"
				Grid.Row="3"
				Content="Save"
				Command="{Binding SaveNewHighScoreCommand}" />
	</Grid>
</UserControl>